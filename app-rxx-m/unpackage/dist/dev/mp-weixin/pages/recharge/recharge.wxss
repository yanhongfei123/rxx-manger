@import "../../common/vendor.wxss";

@charset "UTF-8";
.content {
  overflow-x: hidden;
}
._button[type=primary] {
  width: 690rpx;
  margin: 0 auto;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: #FF9833;
}
._button[disabled][type=primary] {
  background-color: #BBB;
}
#primary {
  margin-top: 150rpx;
  color: #fff;
  font-size: 34rpx;
}
.content {
  height: 100%;
  font-size: 30rpx;
  color: #565656;
  padding-top: 30rpx;
}
.content .pad30 {
  padding: 0 30rpx;
}
.content .title {
  margin: 35rpx 0 50rpx;
}
.content .uni-list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  -webkit-flex-wrap: wrap;
  flex-wrap: wrap;
  -webkit-align-content: flex-start;
  align-content: flex-start;
  padding-bottom: 45rpx;
}
.content .uni-list-cell {
  width: 210rpx;
  height: 110rpx;
  margin-bottom: 40rpx;
  color: #FF9833;
  font-size: 40rpx;
  text-align: center;
  line-height: 110rpx;
  border-radius: 10rpx;
  border: 2rpx solid #FF9833;
}
.content .uni-list-cell.colo_A4A3AC {
  color: #A4A3AC;
  border-color: #A4A3AC;
}
.content .uni-list-cell.selected {
  background: #FF9833;
  color: #fff;
}
.content .uni-list-cell.colo_A4A3AC.selected {
  background: none;
  border-color: #FF9833;
  color: #FF9833;
}
.content .uni-list-cell ._input {
  height: 110rpx;
  line-height: 110rpx;
}
.content .line {
  height: 20rpx;
  background: #F5F5F5;
}
.content .pay-title {
  margin: 35rpx 0 10rpx;
}
.content .recharge-item {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  height: 100rpx;
  line-height: 100rpx;
  padding-right: 26rpx;
}
.content .recharge-item::after {
  content: '';
  position: absolute;
  width: 750rpx;
  height: 2rpx;
  left: 0;
  bottom: 0;
  background: #E6E6E6;
}
.content .recharge-item .recharge-type {
  font-size: 34rpx;
}
.content .recharge-item .recharge-type .vm {
  display: inline-block;
  vertical-align: middle;
}
.content .recharge-item .recharge-type image {
  margin-right: 38rpx;
}
.content .recharge-item .recharge-type .weixin-icon {
  width: 55rpx;
  height: 47rpx;
}
.content .recharge-item .recharge-type .zfb-icon {
  width: 53rpx;
  height: 53rpx;
}
.content .recharge-item .select-btn {
  width: 34rpx;
  height: 34rpx;
  border: 2rpx solid #FF9833;
  border-radius: 4rpx;
}
.content .recharge-item .select-btn image {
  width: 34rpx;
  height: 34rpx;
  display: none;
}
.content .choosed .select-btn image {
  display: block;
}