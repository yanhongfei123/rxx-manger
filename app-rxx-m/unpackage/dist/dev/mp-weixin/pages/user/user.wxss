@import "../../common/vendor.wxss";

@charset "UTF-8";
.top-wrap {
  padding: 80rpx 46rpx 50rpx;
  text-align: center;
  font-size: 32rpx;
  color: #1A1A1A;
}
.top-wrap .info-wrap {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-bottom: 52rpx;
}
.top-wrap .info-wrap .logo {
  width: 120rpx !important;
  height: 120rpx !important;
}
.top-wrap .info-wrap .info {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  line-height: 1;
  margin-left: 20rpx;
  text-align: left;
}
.top-wrap .info-wrap .info .name {
  margin-top: 20rpx;
  font-family: PingFang-SC-Medium;
  font-weight: meduim;
  font-size: 32rpx;
}
.top-wrap .info-wrap .info .tel {
  margin-top: 20rpx;
  font-size: 30rpx;
  font-family: PingFang-SC-Regular;
}
.top-wrap .btn-wrap {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.top-wrap .btn-wrap ._button {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}
.top-wrap .btn-wrap ._button:last-child {
  margin-left: 30rpx;
  background-color: #F87354;
}
.b-line {
  height: 20rpx;
  background-color: #F5F5F5;
}
.uni-list {
  padding: 0 20rpx 0 50rpx;
}
.uni-list-cell {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.uni-list-cell .input-row {
  position: relative;
  height: 100rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  margin: 0;
}
.uni-list-cell .input-row .title {
  width: 200rpx;
}
.uni-list-cell .input-row .share-btn {
  position: absolute;
  width: 100%;
  height: 100rpx;
  left: 0;
  top: 0;
  opacity: 0;
  z-index: 1;
}
.uni-list-cell .icon {
  width: 36rpx;
  margin: 0 45rpx 0 0;
}
.share-content-mask {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.6);
}
.share-content {
  position: absolute;
  bottom: 0;
  width: 100%;
  background: #fff;
  padding: 50rpx 0 75rpx;
  text-align: center;
}
.share-content .share-des {
  font-size: 30rpx;
  color: #FF9833;
  margin-bottom: 72rpx;
}
.share-content .share-list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
}
.share-content .share-list .share-item {
  margin: 0 60rpx;
}
.share-content .share-list image {
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 22rpx;
}
.share-content .share-list .share-type {
  font-size: 30rpx;
  color: #1A1A1A;
}
.share-content .hideMask {
  width: 690rpx;
  margin: 75rpx auto 0;
}