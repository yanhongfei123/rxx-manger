@import "../../common/vendor.wxss";

@charset "UTF-8";
page {
  height: auto;
}
.content {
  padding: 0 30rpx;
  height: 100%;
}
.tab-wrap {
  width: 686rpx;
  margin: 20rpx auto;
  height: 58rpx;
  line-height: 58rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  text-align: center;
  border: 2rpx solid #FF9500;
  border-radius: 30rpx;
  overflow: hidden;
}
.tab-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  color: #454545;
  font-size: 30rpx;
}
.tab-item.tab-item-mid {
  border-left: 2rpx solid  #FF9500;
  border-right: 2rpx solid  #FF9500;
}
.tab-item.active {
  background: #FF9500;
  color: #fff;
}
.user-list {
  color: #454545;
  font-size: 32rpx;
}
.user-list .user {
  height: 100rpx;
  line-height: 100rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  border-bottom: 2rpx solid #E6E6E6;
}
.uni-list-cell {
  width: 690rpx;
  margin: 28rpx auto 0;
  background: #fff;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #1A1A1A;
  overflow: hidden;
  padding-bottom: 25rpx;
}
.order-number {
  font-size: 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  padding-left: 20rpx;
  border-bottom: 2rpx solid #E6E6E6;
}
.h-70 {
  height: 70rpx;
  line-height: 70rpx;
  padding-left: 20rpx;
}
.apply-date {
  color: #FF9833;
}
.ewm-wrap {
  width: 610rpx;
  padding: 75rpx 0 155rpx;
  margin: 75rpx auto;
  text-align: center;
  border: 2rpx solid #E6E6E6;
}
.ewm-wrap image {
  width: 430rpx;
  height: 430rpx;
}
.ewm-wrap .code {
  font-size: 80rpx;
  color: #FF9833;
  margin: 54rpx 0 30rpx;
}
.ewm-wrap .des {
  font-size: 30rpx;
  color: #454545;
}